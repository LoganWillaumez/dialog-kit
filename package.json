{
	"name": "@LoganWillaumez/dialog-kit",
	"version": "0.0.1",
	"description": "A reusable Svelte component library, specializing in creating interactive dialogues (such as confirmations, errors, etc.). These dialogues come with customizable, interactive buttons and are optimized for use with SvelteKit.",
	"keywords": [
		"Svelte",
		"SvelteKit",
		"Reusable",
		"Component Library",
		"Interactive Dialogues",
		"Confirmations",
		"Errors",
		"Customizable",
		"Interactive Buttons"
	],
	"homepage": "https://github.com/LoganWillaumez/dialog-kit",
	"license": "MIT",
	"author": {
		"name": "Willaumez Logan",
		"url": "https://github.com/LoganWillaumez"
	},
	"repository": "github:rossrobino/components",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"publint": "^0.1.9",
		"sass": "^1.63.6",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
